<Window x:Class="SpaceEngineersOreRedistribution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceEngineersOreRedistribution"
        mc:Ignorable="d"
        Title="SE Ore Redistribution" Height="450" Width="1000">
    <Window.DataContext>
        <local:MainWindowViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <MenuItem
                Header="File">
                <MenuItem Header="Open Planet Definition" Command="{Binding OpenPlanetDefinitionCommand}" />
            </MenuItem>
        </Menu>
        <GroupBox
            Grid.Row="1" Grid.Column="0" MinWidth="150" Header="Planets" Margin="3">
            <ListBox
                ItemsSource="{Binding PlanetDefinitions}" DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedPlanetDefinition}"/>
        </GroupBox>
        <GroupBox
            Grid.Row="2" Grid.Column="0" Header="Ore Types" MinWidth="150" Margin="3">
            <ListBox
                ItemsSource="{Binding OreTypes}"
                SelectedItem="{Binding SelectedOreType}"/>
        </GroupBox>
        <GroupBox
            Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Header="Ore Type" MinWidth="350" Margin="3">
            <ListView
                ItemsSource="{Binding OreMappings}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Value" Grid.Column="0" HorizontalAlignment="Center" />
                            <TextBox Text="{Binding Value}" Grid.Column="1" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Start" Grid.Column="2" HorizontalAlignment="Center" />
                            <TextBox Text="{Binding Start}" Grid.Column="3" HorizontalAlignment="Stretch" />
                            <TextBlock Text="Depth" Grid.Column="4" HorizontalAlignment="Center" />
                            <TextBox Text="{Binding Depth}" Grid.Column="5" HorizontalAlignment="Stretch" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>
        <GroupBox
            Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Header="Map" Margin="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" >
                        <Button Width="50" Content="Back" Margin="3" Command="{Binding ImageCommand}" CommandParameter="back" />
                        <Button Width="50" Content="Front" Margin="3" Command="{Binding ImageCommand}" CommandParameter="front"/>
                        <Button Width="50" Content="Left" Margin="3" Command="{Binding ImageCommand}" CommandParameter="left"/>
                        <Button Width="50" Content="Right" Margin="3" Command="{Binding ImageCommand}" CommandParameter="right"/>
                        <Button Width="50" Content="Up" Margin="3" Command="{Binding ImageCommand}" CommandParameter="up" />
                        <Button Width="50" Content="Down" Margin="3" Command="{Binding ImageCommand}" CommandParameter="down" />
                        <TextBlock Text="Current Tile: " VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentImage}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <Border
                    Grid.Row="1" x:Name="BorderView" ClipToBounds="True" Background="Gray">
                    <Image x:Name="ImageView" Source="{Binding Image}"  />
                </Border>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
